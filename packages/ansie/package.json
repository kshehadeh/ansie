    "funding": {
        "type": "patreon",
        "url": "https://www.patreon.com/karimshehadeh"
    },
    "bugs": {
        "url": "https://github.com/kshehadeh/ansie/issues"
    },
    "license": "MIT",
    "keywords": [
        "terminal",
        "cli",
        "markup",
        "parser",
        "rendering",
        "rich",
        "text",
